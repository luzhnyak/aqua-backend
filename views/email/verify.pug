extends layouts/main

block content
    tr
        td.wrapper
            p #{t("email.verifyDear")} #{name},
            p #{t('email.Welcome')}
            p #{t('email.verifyPart')}
            p #{t('email.verifyStart')}
            table.btn.btn-primary(role="presentation", border="0", cellpadding="0", cellspacing="0")
                tbody
                    tr
                        td(align="left")
                            table(role="presentation", border="0", cellpadding="0", cellspacing="0")
                                tbody
                                    tr
                                        td
                                            a(href=url, target="_blank") #{t('email.verifyClick')}
            p #{t('email.verifyIfLinkNotWork')}
            p #{url}